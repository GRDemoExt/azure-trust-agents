# Azure Storage Account
AZURE_STORAGE_ACCOUNT_NAME="your-storage-account-name"
AZURE_STORAGE_ACCOUNT_KEY="your-storage-account-key"
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=your-storage-account-name;AccountKey=your-storage-account-key;EndpointSuffix=core.windows.net"

# Log Analytics Workspace
LOG_ANALYTICS_WORKSPACE_NAME="your-loganalytics-workspace-name"

# Azure AI Search
SEARCH_SERVICE_NAME="your-search-service-name"
SEARCH_SERVICE_ENDPOINT="https://your-search-service-name.search.windows.net/"
SEARCH_ADMIN_KEY="your-search-admin-key"

# AI Foundry / Azure OpenAI
AI_FOUNDRY_HUB_NAME="your-aifoundry-hub-name"
AI_FOUNDRY_PROJECT_NAME="your-aiproject-name"
AI_FOUNDRY_ENDPOINT="https://your-aifoundry-hub-name.cognitiveservices.azure.com/"
AI_FOUNDRY_KEY="your-aifoundry-key"
AI_FOUNDRY_HUB_ENDPOINT="https://ml.azure.com/home?wsid=/subscriptions/your-subscription-id/resourceGroups/your-resource-group/providers/Microsoft.CognitiveServices/accounts/your-aifoundry-hub-name"
AI_FOUNDRY_PROJECT_ENDPOINT="https://your-aifoundry-hub-name.services.ai.azure.com/api/projects/your-aiproject-name"
AZURE_AI_CONNECTION_ID="/subscriptions/your-subscription-id/resourceGroups/your-resource-group/providers/Microsoft.CognitiveServices/accounts/your-aifoundry-hub-name/connections/your-aifoundry-hub-name-aisearch"

# Azure Cosmos DB
COSMOS_ENDPOINT="https://your-cosmos-account-name.documents.azure.com:443/"
COSMOS_KEY="your-cosmos-primary-key"
COSMOS_CONNECTION_STRING="AccountEndpoint=https://your-cosmos-account-name.documents.azure.com:443/;AccountKey=your-cosmos-primary-key;"

# API Management
APIM_NAME="your-apim-service-name"
APIM_GATEWAY_URL="https://your-apim-service-name.azure-api.net"
APIM_SUBSCRIPTION_KEY="your-apim-subscription-key"

# Azure Container Registry
ACR_NAME="your-container-registry-name"
ACR_USERNAME="your-container-registry-username"
ACR_PASSWORD="your-container-registry-password"
ACR_LOGIN_SERVER="your-container-registry-name.azurecr.io"

# Azure OpenAI (for backward compatibility)
AZURE_OPENAI_SERVICE_NAME="your-aifoundry-hub-name"
AZURE_OPENAI_ENDPOINT="https://your-aifoundry-hub-name.cognitiveservices.azure.com/"
AZURE_OPENAI_KEY="your-aifoundry-key"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4.1-mini"
MODEL_DEPLOYMENT_NAME="gpt-4.1-mini"
